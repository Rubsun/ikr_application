<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/michaelnoskov_margin_large">

        <!-- Заголовок экрана -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:gravity="center"
            android:text="@string/michaelnoskov_title"
            android:layout_marginBottom="@dimen/michaelnoskov_margin_xlarge"/>

        <!-- Контейнер квадрата с рамкой -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="?attr/colorSurfaceVariant"
            android:padding="@dimen/michaelnoskov_margin_small"
            android:layout_marginBottom="@dimen/michaelnoskov_margin_xlarge">

            <View
                android:id="@+id/square_view"
                android:layout_width="@dimen/michaelnoskov_square_size_medium"
                android:layout_height="@dimen/michaelnoskov_square_size_medium"
                android:background="?attr/colorPrimary"
                android:rotation="0"
                android:elevation="@dimen/michaelnoskov_elevation_high"/>

        </FrameLayout>

        <!-- Панель управления квадратом -->
        <LinearLayout
            android:id="@+id/buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/michaelnoskov_margin_xlarge"
            android:gravity="center">

            <!-- Первая строка кнопок -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/michaelnoskov_margin_medium"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/change_color_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="@string/michaelnoskov_button_change_color"
                    android:layout_marginEnd="@dimen/michaelnoskov_margin_medium"
                    app:cornerRadius="@dimen/michaelnoskov_button_corner_radius"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/rotate_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="@string/michaelnoskov_button_rotate"
                    android:layout_marginEnd="@dimen/michaelnoskov_margin_medium"
                    app:cornerRadius="@dimen/michaelnoskov_button_corner_radius"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/resize_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="@string/michaelnoskov_button_resize"
                    app:cornerRadius="@dimen/michaelnoskov_button_corner_radius"/>

            </LinearLayout>

            <!-- Вторая строка с кнопкой синхронизации -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/sync_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="@string/michaelnoskov_button_sync"
                app:cornerRadius="@dimen/michaelnoskov_button_corner_radius"/>

        </LinearLayout>

        <!-- Поисковая строка -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="@dimen/michaelnoskov_margin_large"
            android:hint="@string/michaelnoskov_hint_search">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textAutoCorrect"
                android:imeOptions="actionDone"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Добавление элемента -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="@dimen/michaelnoskov_margin_large"
            android:hint="@string/michaelnoskov_hint_new_item">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_item_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textAutoCorrect"
            android:imeOptions="actionDone"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Кнопка добавления -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_item_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button"
            android:text="@string/michaelnoskov_button_add_item"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/michaelnoskov_margin_xlarge"
            app:cornerRadius="@dimen/michaelnoskov_button_corner_radius"/>

        <!-- Счетчик элементов -->
        <TextView
            android:id="@+id/items_count_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:gravity="center"
            android:text="@string/michaelnoskov_items_count_default"
            android:layout_marginBottom="@dimen/michaelnoskov_margin_large"/>

        <!-- Список элементов в карточке -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/michaelnoskov_margin_xlarge"
            app:cardCornerRadius="@dimen/michaelnoskov_card_corner_radius"
            app:cardElevation="@dimen/michaelnoskov_elevation_low">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/michaelnoskov_padding_large">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:text="@string/michaelnoskov_title_items_list"
                    android:layout_marginBottom="@dimen/michaelnoskov_margin_medium"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/items_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:minHeight="100dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- График в карточке -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/michaelnoskov_card_corner_radius"
            app:cardElevation="@dimen/michaelnoskov_elevation_low">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/michaelnoskov_padding_large">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:text="@string/michaelnoskov_title_chart"
                    android:layout_marginBottom="@dimen/michaelnoskov_margin_medium"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/bar_chart"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/michaelnoskov_chart_height"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>