<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/akiko23_title"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/akiko23_description"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:gravity="center"
            android:textAlignment="center"
            android:paddingHorizontal="16dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/load_quote_button"
            style="?attr/materialButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/akiko23_show_quote"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/quote_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="8dp"
            app:cardBackgroundColor="?attr/colorPrimaryContainer"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="1dp"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/quote_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:padding="24dp"
                android:gravity="center"
                android:textAlignment="center"
                android:lineSpacingExtra="4dp"
                android:fontFamily="sans-serif-medium"
                tools:text="Волк не тот кто волк, а тот кто волк"
                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/wolf_image_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/wolf_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                tools:src="@drawable/ic_capybara_outline"
                />

        </com.google.android.material.card.MaterialCardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>

