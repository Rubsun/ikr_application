<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        style="?attr/songCardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kristevt_screen_title"
        android:scrollbars="vertical"
        android:padding="16dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/kristevtRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        />

    <Button
        android:id="@+id/songSort"
        style="?attr/songSortButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kristevt_caption_sort_by_year"
        />

    <TextView
        android:id="@+id/songLyrics"
        style="?attr/songLyrics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kristevt_caption_lyrics_placeholder"
        android:scrollbars="vertical"
        android:padding="16dp"
        />

</androidx.appcompat.widget.LinearLayoutCompat>
