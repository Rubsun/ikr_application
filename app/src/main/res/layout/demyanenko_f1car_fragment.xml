<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".demyanenko.ui.F1CarFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Врум врум?"
        android:textStyle="bold" />

    <!-- Поиск -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Поиск машины..." />

    <!-- Блок добавления машины -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        android:padding="8dp"
        android:background="@android:color/darker_gray">

        <EditText
            android:id="@+id/carNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Название машины"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/carSoundEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Звук машины (опционально)"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/addCarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить машину"
            android:textColor="#87FF00" />
    </LinearLayout>

    <!-- Индикатор загрузки -->
    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- Сообщение об ошибке -->
    <TextView
        android:id="@+id/errorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:layout_marginBottom="8dp" />

    <!-- RecyclerView для списка машин -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/carsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
