<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/stu_screen_padding">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/stu_anime_search_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/stu_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSearch"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <ProgressBar
        android:id="@+id/stu_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/stu_spacing_m"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <TextView
        android:id="@+id/stu_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/stu_spacing_m"
        android:textAppearance="@style/TextAppearance.Stupishin.Body"
        android:textColor="?attr/colorError"
        android:visibility="gone" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/stu_retry"
        style="@style/Widget.Stupishin.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/stu_spacing_s"
        android:text="@string/stu_anime_retry"
        android:visibility="gone" />

    <TextView
        android:id="@+id/stu_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/stu_spacing_m"
        android:text="@string/stu_anime_empty"
        android:textAppearance="@style/TextAppearance.Stupishin.Body"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stu_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/stu_spacing_m"
        android:layout_weight="1" />

</androidx.appcompat.widget.LinearLayoutCompat>
