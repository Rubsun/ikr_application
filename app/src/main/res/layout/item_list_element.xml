<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/michaelnoskov_list_item_height"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/michaelnoskov_padding_small"
    android:paddingHorizontal="@dimen/michaelnoskov_padding_medium"
    android:gravity="center_vertical">

    <View
        android:layout_width="4dp"
        android:layout_height="16dp"
        android:background="?attr/colorPrimary"
        android:layout_marginEnd="@dimen/michaelnoskov_margin_medium"/>

    <TextView
        android:id="@+id/item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_marginEnd="@dimen/michaelnoskov_margin_medium"/>

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="?attr/colorOnSurfaceVariant"/>

</LinearLayout>